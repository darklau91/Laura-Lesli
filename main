from flask import Flask, render_template
from datetime import datetime
from babel.dates import format_date
import locale

app = Flask(__name__)

# Fecha de inicio del contador
start_date = datetime(2024, 1, 30)

@app.route('/')
def home():
    # Fecha actual
    current_date = datetime.now()

    # Calcula la diferencia en días
    delta = current_date - start_date
    days_passed = delta.days

    # Formatear la fecha en español usando Babel
    start_date_str = format_date(start_date, locale='es_ES')

    # Renderiza el archivo HTML con las variables
    return render_template('index.html', days_passed=days_passed, start_date=start_date_str)

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=8080)
